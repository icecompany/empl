<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_empl/models/rules">
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_EMPL_FILTER_SEARCH_EMPLOYERS"
                description="COM_EMPL_FILTER_SEARCH_EMPLOYERS"
                hint="COM_EMPL_FILTER_SEARCH_EMPLOYERS"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="gender"
                type="list"
                label="COM_EMPL_FILTER_SELECT_GENDER"
                description="COM_EMPL_FILTER_SELECT_GENDER"
                onchange="this.form.submit();"
        >
            <option value="">COM_EMPL_FILTER_SELECT_GENDER</option>
            <option value="m">COM_EMPL_FILTER_SELECT_GENDER_M</option>
            <option value="f">COM_EMPL_FILTER_SELECT_GENDER_F</option>
        </field>
        <field
                name="min_age"
                type="Age"
                label="COM_EMPL_FILTER_SELECT_MIN_AGE"
                description="COM_EMPL_FILTER_SELECT_MIN_AGE"
                onchange="this.form.submit();"
        >
            <option value="">COM_EMPL_FILTER_SELECT_MIN_AGE</option>
        </field>
        <field
                name="max_age"
                type="Age"
                label="COM_EMPL_FILTER_SELECT_MAX_AGE"
                description="COM_EMPL_FILTER_SELECT_MAX_AGE"
                onchange="this.form.submit();"
        >
            <option value="">COM_EMPL_FILTER_SELECT_MAX_AGE</option>
        </field>
        <field
                name="metro"
                type="Metro"
                label="COM_EMPL_FILTER_SELECT_METRO"
                description="COM_EMPL_FILTER_SELECT_METRO"
                multiple="true"
                onchange="this.form.submit();"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_EMPL_FILTER_SELECT_FULL_ORDERING"
                description="COM_EMPL_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_EMPL_FILTER_SELECT_LIMIT"
                description="COM_EMPL_FILTER_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>